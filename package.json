{
  "name": "mastra-hono",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsc",
    "start": "bun run dist/index.js",
    "cli": "bun run src/cli/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "clean": "rm -rf dist coverage .mastra",
    "lint": "biome check --write",
    "lint:check": "biome check",
    "lint:ox": "oxlint",
    "lint:ox:fix": "oxlint --fix",
    "format": "biome format --write",
    "format:check": "biome format",
    "typecheck": "tsc --noEmit",
    "check": "biome check && oxlint && tsc --noEmit",
    "precommit": "bun run lint && bun run typecheck",
    "verify": "bun run check && bun run test",
    "forge": "bash scripts/forge.sh",
    "finish": "bash scripts/finish.sh",
    "ask": "bash scripts/ask.sh"
  },
  "dependencies": {
    "@mastra/core": "^1.4.0",
    "@mastra/hono": "^1.1.3",
    "@mastra/libsql": "^1.4.0",
    "@mastra/loggers": "^1.0.1",
    "@mastra/memory": "^1.3.0",
    "@mastra/observability": "^1.2.0",
    "hono": "^4.11.9",
    "just-bash": "^2.10.2",
    "mastra": "^1.3.1",
    "ollama-ai-provider-v2": "^3.3.1",
    "remeda": "^2.33.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@types/bun": "^1.2.0",
    "oxlint": "^1.50.0",
    "typescript": "^5.8.3"
  }
}
